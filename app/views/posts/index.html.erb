<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Video</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %><% a=YouTubeAddy.extract_video_id(post.video) %></td>        
        <td><% embed_url="<iframe width='420' height='315' src='http://www.youtube.com/embed/#{a}' frameborder='0' allowfullscreen></iframe>" %></td>        
        <td><%= embed_url.html_safe %> </td>
        <!-- <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

